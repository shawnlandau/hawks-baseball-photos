rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Photos collection
    match /photos/{photoId} {
      allow read: if true; // Anyone can read photos
      allow create: if request.auth != null; // Only authenticated users can create
      allow update, delete: if request.auth != null && (
        resource.data.uploadedBy == request.auth.uid || // Owner can update/delete
        request.auth.token.email == 'shawnjl@outlook.com' // Admin can update/delete any photo
      );
    }
    
    // Users collection (for user profiles)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 